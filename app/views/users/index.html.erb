<%= title "User Management" do -%>

	<%= menu_item "Add User", new_user_path, 'icons/add-user.png' %>
	<%= render :partial => 'settings/menu' %>

<% end %>

<div id="users" class='grid_12 page boxit'>
	
	<table class='default' border="0" cellspacing="0" cellpadding="0">
		<tr>
			<th>Enabled</th>
			<th>Admin.</th>
			<th>Name</th>
			<th>E-mail</th>
			<th>Login Count</th>
			<th>Last Login IP</th>
			<th>Last Login Time</th>
			<th>Destroy</th>
		</tr>
		<tbody class='users'>
			<%= render @users %>
		</tbody>
	</table>


	<%= pager(@users, 'users') %>
	
</div>
